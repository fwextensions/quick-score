{
  "name": "quick-score",
  "version": "0.0.1",
  "description": "A JavaScript string-scoring and fuzzy-matching library based on the Quicksilver algorithm, designed for smart auto-complete.",
  "keywords": [
    "string",
    "score",
    "sort",
    "search",
    "fuzzy",
    "quicksilver"
  ],
  "license": "MIT",
  "author": "John Dunning (https://github.com/fwextensions)",
  "repository": "github:fwextensions/quick-score",
  "homepage": "https://github.com/fwextensions/quick-score",
  "bugs": "https://github.com/fwextensions/quick-score/issues",
  "main": "lib/index.js",
  "module": "lib/index.esm.js",
  "files": [
    "dist",
    "lib"
  ],
  "scripts": {
    "prebuild": "npm run test",
    "build": "npm run build:lib && npm run build:docs",
    "build:lib": "rimraf dist lib && rollup -c",
    "build:docs": "rimraf docs && jsdoc -c jsdoc/config.json",
    "prepare": "npm run build",
    "pretest": "eslint src",
    "test": "jest --runInBand",
    "test:watch": "npm test -- --watch",
    "test:coverage": "npm test -- --coverage"
  },
  "babel": {
    "env": {
      "test": {
        "presets": [
          "env"
        ]
      }
    }
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/*.js",
      "!src/index.js"
    ],
    "setupTestFrameworkScriptFile": "./test/setup.js"
  },
  "engines": {
    "node": ">=6.4.0"
  },
  "dependencies": {},
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-env": "^1.7.0",
    "benchmark": "^2.1.4",
    "eslint": "^5.3.0",
    "jest": "^23.6.0",
    "jsdoc": "^3.5.5",
    "rimraf": "^2.6.2",
    "rollup": "^0.63.4",
    "rollup-plugin-babel": "^3.0.7",
    "rollup-plugin-babel-minify": "^5.0.0",
    "rollup-plugin-node-resolve": "^3.3.0"
  }
}
